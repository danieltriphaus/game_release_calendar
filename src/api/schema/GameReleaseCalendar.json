  "components": {
    "schemas": {
      "Game": {
        "title": "Game",
        "type": "object",
        "properties": {
          "id": {
            "type": "number"
          },
          "name": {
            "type": "string"
          },
          "first_release_date": {
            "type": "number"
          },
          "developers": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string"
                },
                "name": {
                  "type": "string"
                }
              }
            }
          },
          "cover": {
            "type": "object",
            "properties": {
              "url": {
                "type": "string"
              }
            }
          }
        }
      },
      "Error": {
        "title": "Error",
        "type": "object",
        "properties": {
          "error": {
            "type": "string"
          },
          "message": {
            "type": "string"
          }
        }
      },
      "User": {
        "title": "User",
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "UserGame": {
        "title": "UserGame",
        "type": "object",
        "properties": {
          "user_id": {
            "type": "string"
          },
          "game_id": {
            "type": "number"
          }
        },
        "description": "A game that a user has saved because they are interested in it"
      }
    },
    "responses": {
      "entity_not_found": {
        "description": "Entity not found Response",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            },
            "examples": {
              "entity not found": {
                "value": {
                  "error": "not_found",
                  "message": "entity not found"
                }
              }
            }
          }
        }
      },
      "invalid_api_key": {
        "description": "Invalid API Key",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            },
            "examples": {
              "invalid API Key": {
                "value": {
                  "error": "not_authorized",
                  "message": "invalid API Key "
                }
              }
            }
          }
        }
      }
    },
    "parameters": {},
    "securitySchemes": {
      "apiKey": {
        "name": "API Key",
        "type": "apiKey",
